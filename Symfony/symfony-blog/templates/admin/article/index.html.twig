{% extends 'base.html.twig' %}

{% block body %}
    <h1>Gestion des articles</h1>

    <p>
        <a href="{{ path("app_admin_article_edit") }}">
            Ajouter un article
        </a>
    </p>
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Categorie</th>
            <th>Titre</th>
            <th>Date</th>
            <th>Auteur</th>
            <th width="200px"></th>
            <th width="200px"></th>
        </tr>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.category }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.publicationDate | date('d/m/Y H:i') }}</td>
                <td>{{ article.author }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_admin_article_edit', {id: article.id}) }}">
                        Modifier
                    </a>
                </td>
                <td>
                    <a class="btn btn-danger" href="{{ path('app_admin_article_delete', {id: article.id}) }}">
                        Supprimer
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
